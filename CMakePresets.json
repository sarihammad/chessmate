{
  "version": 6,
  "configurePresets": [
    {
      "name": "dev",
      "generator": "Ninja",
      "binaryDir": "build/dev",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CHESSMATE_BUILD_TESTS": "ON",
        "CHESSMATE_ENABLE_SANITIZERS": "OFF"
      }
    },
    {
      "name": "asan",
      "generator": "Ninja",
      "binaryDir": "build/asan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CHESSMATE_BUILD_TESTS": "ON",
        "CHESSMATE_ENABLE_SANITIZERS": "ON"
      }
    },
    {
      "name": "release-lto",
      "generator": "Ninja",
      "binaryDir": "game/build/release-lto",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CHESSMATE_BUILD_TESTS": "OFF",
        "CHESSMATE_ENABLE_LTO": "ON"
      }
    }
  ],
  "buildPresets": [
    { "name": "dev", "configurePreset": "dev" },
    { "name": "asan", "configurePreset": "asan" },
    { "name": "release-lto", "configurePreset": "release-lto" }
